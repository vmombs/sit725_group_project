<!DOCTYPE html>
<html>

<head>
  <title>My Account</title>
  <link rel="icon" type="image/x-icon" href="/assets/favicon.ico">
  <link rel="shortcut icon" type="image/x-icon" href="/assets/favicon.ico">
  <!--Link directly to the jQuery CDN-->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

  <!--Import Google Icon Font-->
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

  <!--Import materialize.css-->
  <link type="text/css" rel="stylesheet" href="css/materialize.min.css" media="screen,projection" />

  <!-- Import custom material colours -->
  <link type="text/css" rel="stylesheet" href="css/material-styles.css" media="screen,projection" />

  <!--Let browser know website is optimized for mobile-->
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <style>
    body {
      display: flex;
      min-height: 100vh;
      flex-direction: column;
    }

    main {
      flex: 1 0 auto;
      padding: 20px;
    }

    .history-panel {
      max-height: 300px;
      /* Set a maximum height */
      overflow-y: auto;
      /* Enable vertical scrolling */
      border: 1px solid #ddd;
      padding: 10px;
      margin-top: 10px;
    }

    .history-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .history-header button {
      margin-bottom: 0px;
    }
  </style>

</head>

<body>

  <%- include('../partials/navbar') %>

    <main class="container">
      <div class="row">
        <div class="col s12 m10 offset-m1">
          <div class="card">
            <div class="card-content">
              <span class="card-title">
                <p>Hello <strong>
                    <%= username %>
                  </strong></p>
              </span>

            </div>
          </div>

          <div class="card">
            <div class="card-content">
              <span class="card-title">Manage Account</span>
              <ul>
                <li>Email: <%= email %></li>
              </ul>
            </div>
            <div class="card-action" style="display: flex; gap: 10px; justify-content: flex-end; align-items: center;">
              <div class="light"> 
              <a 
              class="waves-effect waves-light btn" 
              href="/auth/forgot-password" 
              style="background-color: var(--md-sys-color-primary); color: white;"> 
              Change Password
            </a>
          </div>
              <form action="/auth/logout" method="POST" style="margin: 0;">
                <button type="submit" class="waves-effect waves-light btn red">Logout</button>
              </form>
              <a class="waves-effect waves-light btn grey" href="/delete-account">Delete Account</a>
            </div>
          </div>

          <div class="card">
            <div class="card-content">
              <div class="history-header">
                <span class="card-title">My History</span>
                <div class="light"> 
                <a class="waves-effect waves-light btn" 
                href="/export-history"
                style="background-color: var(--md-sys-color-primary); color: white;"> 
                Export History</a>
              </div>
              </div>
              <div class="history-panel">
                <% if (userHistory && userHistory.length> 0) { %>
                  <ul>
                    <% userHistory.forEach(item=> { %>
                      <li>
                        <%= item %>
                      </li>
                      <% }); %>
                  </ul>
                  <% } else { %>
                    <p>No history available.</p>
                    <% } %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>

    <!--JavaScript at end of body for optimized loading-->
    <script type="text/javascript" src="js/materialize.min.js"></script>
    <script src="js/script.js"></script>

</body>

</html>